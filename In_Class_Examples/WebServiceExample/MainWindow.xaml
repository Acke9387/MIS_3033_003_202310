        <ImageBrush ImageSource="https://th.bing.com/th/id/OIP.szModtmCLUl-gIWZcSwE-QHaEK?pid=ImgDet&amp;rs=1"/>
    </Window.Background>
    <Grid>
        <ComboBox x:Name="cboCharacters" HorizontalAlignment="Left" Margin="175,76,0,0" VerticalAlignment="Top" Width="120" SelectionChanged="cboCharacters_SelectionChanged"/>
        <Label Content="Select a character :" HorizontalAlignment="Left" Margin="45,76,0,0" VerticalAlignment="Top"/>
        <Image x:Name="img" HorizontalAlignment="Left" Height="265" Margin="215,133,0,0" VerticalAlignment="Top" Width="406"/>

    </Grid>
